{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "no-console": "warn"
  },
  "env": {
    "node": true,
    "es2020": true,
    "jest": true,
    "jasmine": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "legacyDecorators": true
    }
  }
}
